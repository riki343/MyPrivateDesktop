{% extends '::base.html.twig' %}

{% block body %}
    <style rel="stylesheet" type="text/css">
        body {
            margin: 0;
            padding: 0;
            /*opacity: 0.7;*/
            color: whitesmoke;
            background-image: url('/awesome4.jpg');
            background-size: cover;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        #main {
            background-color: rgba(57, 0, 118, 0.5);
            position: relative;
            width: 100%;
            height: 100%;
            z-index: 2;
            overflow-y: auto;
        }

        .sort-panel {
            position: fixed;
            top:0;
            left:0;
            width: 15%;
            height: 100%;
            border-right: solid white 1px;
        }

        .list-vertical {
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .list-vertical-item {
            padding: 10px;
            border-bottom: solid whitesmoke 1px;
            height: 40px;
            line-height: 40px;
            transition: 0.15s linear background-color;
        }

        .list-vertical-item > a {
            display: block;
            width: 100%;
            height: 100%;
            text-decoration: none;
            color: white;
            font-weight: bolder;
            text-shadow: 2px 2px #000;
            opacity: 1;
        }

        .list-vertical-item:hover {
            background-color: rgba(6, 0, 118, 0.85);
        }

        .main-panel {
            margin-left: 15%;
        }

        .list-horizontal {
            margin: 0;
            width: 100%;
            padding: 0 5%;
            box-sizing: border-box;
            display: block;
        }

        .list-horizontal-item {
            width: 19%;
            padding: 10px;
            display: inline-flex;
            height: 150px;
            text-align: center;
            box-sizing: border-box;
        }

        .list-horizontal-item > a {
            display: block;
            width: 100%;
            height: 100%;
            text-decoration: none;
            color: white;
            font-weight: bolder;
            text-shadow: 2px 2px #000;
            opacity: 1;
        }

        .list-horizontal-item > a > img {
            height: 100px;
            background-color: white;
            opacity: 1;
        }

        .list-horizontal-item > a > p {
            margin-top: 5px;
            width: 100%;
            height: 20px;
            line-height: 20px;
        }
    </style>
{% endblock %}